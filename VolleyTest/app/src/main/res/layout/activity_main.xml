<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cx.sh.cn.volleytest.MainActivity">

    <TextView
        android:id="@+id/phone_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号码："
        />
    <EditText
        android:id="@+id/phone_ed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone_tx"/>

    <Button
        android:id="@+id/custom_made_volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_ed"
        android:text="定制自己的Volley"/>
    <Button
        android:id="@+id/load_network_pic_volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_made_volley"
        android:text="Volley加载网络图片"/>

    <Button
        android:id="@+id/cache_network_pic_volley_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_network_pic_volley"
        android:text="Volley缓存机制加载网络图片方式一"/>


    <Button
        android:id="@+id/cache_network_pic_volley_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cache_network_pic_volley_1"
        android:text="Volley缓存机制加载网络图片方式二"/>
</RelativeLayout>
